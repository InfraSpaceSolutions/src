<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayoutMenuItemContainer"
        android:background="#10000000"
        android:layout_marginBottom="2dp"
        android:minHeight="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewMenuItemName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="false"
            android:textColor="#000000"
            android:layout_toStartOf="@+id/textViewMenuItemPrice"
            android:gravity="center_vertical|left"
            android:paddingLeft="10dp"
            android:layout_marginLeft="10dp"
            android:text="Track time (all day) - Restrictions Apply"
            android:layout_toLeftOf="@+id/textViewMenuItemPrice"
            android:layout_centerVertical="true"
            android:paddingTop="5dp"
            android:paddingBottom="5dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewMenuItemPrice"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:text="$5.00"
            android:layout_centerVertical="true" />

    </RelativeLayout>

</RelativeLayout>
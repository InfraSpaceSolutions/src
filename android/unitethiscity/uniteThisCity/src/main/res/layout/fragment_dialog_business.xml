<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayoutbusinessDialogParent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#00FFFFFF" >

    <RelativeLayout
        android:id="@+id/relativeLayoutBusinessDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:background="@drawable/rounded_corners"
        android:padding="10dp" >

        <LinearLayout
            android:id="@+id/linearLayoutBusinessDialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/businessDialogCheckInLayout"
            android:layout_alignRight="@+id/businessDialogCheckInLayout"
            android:background="#3B3B3B"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="5dp" >

            <TextView
                android:id="@+id/businessDialogTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/dialog_business"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/businessDialogName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayoutBusinessDialogTitle"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:paddingBottom="5dp"
            android:textColor="#3B3B3B"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/businessDialogQRCode"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_below="@+id/businessDialogName"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/qr_code" />

        <TextView
            android:id="@+id/businessDialogDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/businessDialogCheckInLayout"
            android:layout_alignRight="@id/businessDialogCheckInLayout"
            android:layout_below="@id/businessDialogQRCode"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/dialog_business_description"
            android:textColor="#3B3B3B" />

        <RelativeLayout
            android:id="@+id/businessDialogCheckInLayout"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/businessDialogDescription"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/buttonBusinessCheckIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/rounded_corners"
                android:text="@string/dialog_check_in"
                android:textColor="#333333" />

            <Button
                android:id="@+id/buttonBusinessRedeem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/rounded_corners"
                android:text="@string/dialog_redeem"
                android:textColor="#333333" />

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
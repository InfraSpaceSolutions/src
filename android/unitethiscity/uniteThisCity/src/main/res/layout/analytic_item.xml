<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="2dp"
        android:id="@+id/relativeLayoutAnalyticItem">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Analytic Name"
            android:id="@+id/analyticName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_toLeftOf="@+id/analyticTotal"
            android:layout_toStartOf="@+id/analyticTotal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/analyticTotal"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="20dp"
            android:textColor="#000000"
            android:layout_alignParentRight="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0%"
            android:id="@+id/analyticPercent"
            android:layout_alignParentRight="true"
            android:textColor="#000000" />

    </RelativeLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayoutInbox"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/crumbWeb"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/crumb_bar_fixed"
        android:gravity="center"
        android:paddingBottom="2dp"
        android:text="@string/web"
        android:textAllCaps="true"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewWebBack"
        android:src="@drawable/btn_back"
        android:layout_alignBottom="@+id/crumbWeb"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="-2dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/linearLayoutWebHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#616161"
        android:orientation="vertical"
        android:layout_below="@+id/crumbWeb">

        <TextView
            android:id="@+id/textViewWebHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>

    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/webViewWeb"
        android:layout_below="@+id/linearLayoutWebHeader" />

</RelativeLayout>
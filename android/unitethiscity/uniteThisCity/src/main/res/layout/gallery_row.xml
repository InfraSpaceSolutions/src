<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relativeLayoutGalleryRow"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageViewGalleryRowItem1"
            android:layout_toLeftOf="@+id/imageViewGalleryRowItem2"
            android:scaleType="centerCrop"
            android:src="@drawable/location_empty"
            android:layout_gravity="center_horizontal"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageViewGalleryRowItem2"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/location_empty"
            android:layout_gravity="center_horizontal"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageViewGalleryRowItem3"
            android:layout_toRightOf="@+id/imageViewGalleryRowItem2"
            android:scaleType="centerCrop"
            android:src="@drawable/location_empty"
            android:layout_gravity="center_horizontal"
            android:visibility="invisible" />
    </LinearLayout>

</RelativeLayout>
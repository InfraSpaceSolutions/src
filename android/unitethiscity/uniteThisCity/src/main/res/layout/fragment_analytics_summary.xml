<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.unitethiscity.ui.AnalyticsSummaryFragment">

    <TextView
        android:id="@+id/crumbAnalyticsSummary"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@drawable/crumb_bar_fixed"
        android:gravity="center"
        android:paddingBottom="2dp"
        android:text="@string/analytics_summary"
        android:textAllCaps="true"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayoutAnalyticsRange"
        android:background="#9e9e9e"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/crumbAnalyticsSummary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TODAY"
            android:id="@+id/analyticsRange"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="16dp" />

        <Button
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="@string/analytics_summary_select_range"
            android:id="@+id/buttonAnalyticsSummarySelectRange"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_sign_up_email"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="#263238" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayoutAnalyticsHeader"
        android:layout_below="@+id/relativeLayoutAnalyticsRange"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="#263238">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/analytics_summary_header_demographic"
            android:id="@+id/analyticsDemographic"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_toLeftOf="@+id/analyticsTotal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/analytics_summary_header_total"
            android:id="@+id/analyticsTotal"
            android:layout_alignParentTop="false"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="100dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_alignParentRight="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/analytics_summary_header_percent"
            android:id="@+id/analyticsPercent"
            android:layout_alignParentRight="true"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollViewAnalytics"
        android:layout_below="@+id/relativeLayoutAnalyticsHeader" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayoutAnalyticsResults"></LinearLayout>
    </ScrollView>

</RelativeLayout>

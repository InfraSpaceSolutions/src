<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutMainFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayoutMainFragmentTop"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="7" >

        <LinearLayout
            android:id="@+id/linearLayoutLocationNamesRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayoutSeparatorBar"
            android:weightSum="2" >

            <TextView
                android:id="@+id/name1Row1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:lines="1"
                android:paddingRight="5dp"
                android:text="Name of Business 1"
                android:textAllCaps="true"
                android:textColor="#40FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/name2Row1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:lines="1"
                android:paddingLeft="5dp"
                android:text="Name of Business 2"
                android:textAllCaps="true"
                android:textColor="#40FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutLocationNamesRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayoutLocationNamesRow1"
            android:weightSum="2" >
            
            <TextView
                android:id="@+id/name1Row2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:lines="1"
                android:paddingRight="5dp"
                android:text="Name of Business 1"
                android:textAllCaps="true"
                android:textColor="#40FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/name2Row2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:lines="1"
                android:paddingLeft="5dp"
                android:text="Name of Business 2"
                android:textAllCaps="true"
                android:textColor="#40FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutLocationNamesRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayoutLocationNamesRow2"
            android:weightSum="2" >
            
            <TextView
                android:id="@+id/name1Row3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:lines="1"
                android:paddingRight="5dp"
                android:text="Name of Business 1"
                android:textAllCaps="true"
                android:textColor="#40FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/name2Row3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:lines="1"
                android:paddingLeft="5dp"
                android:text="Name of Business 2"
                android:textAllCaps="true"
                android:textColor="#40FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />
            
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutLocationNamesRow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayoutLocationNamesRow3"
            android:weightSum="1" >
            
            <TextView
                android:id="@+id/name1Row4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-4dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:lines="1"
                android:text="Name of Business 1"
                android:textAllCaps="true"
                android:textColor="#40FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutLocationNamesRow5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayoutLocationNamesRow4"
            android:weightSum="2" >
            
            <TextView
                android:id="@+id/name1Row5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:lines="1"
                android:paddingRight="5dp"
                android:text="Name of Business 1"
                android:textAllCaps="true"
                android:textColor="#40FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/name2Row5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:lines="1"
                android:paddingLeft="5dp"
                android:text="Name of Business 2"
                android:textAllCaps="true"
                android:textColor="#40FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutLocationNamesRow6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayoutLocationNamesRow5"
            android:weightSum="1" >
            
            <TextView
                android:id="@+id/name1Row6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-4dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:lines="1"
                android:text="Name of Business 1"
                android:textAllCaps="true"
                android:textColor="#40FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/linearLayoutLocationNames"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayoutSeparatorBar"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:id="@+id/locationNames1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:paddingLeft="15dp"
                android:textAllCaps="true"
                android:textColor="#80FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/locationNames2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:paddingLeft="20dp"
                android:textAllCaps="true"
                android:textColor="#80FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/locationNames3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textAllCaps="true"
                android:textColor="#80FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/locationNames4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:paddingLeft="35dp"
                android:textAllCaps="true"
                android:textColor="#80FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/locationNames5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:paddingLeft="20dp"
                android:textAllCaps="true"
                android:textColor="#80FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/locationNames6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:paddingLeft="100dp"
                android:textAllCaps="true"
                android:textColor="#80FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageViewHomeSkyline"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="75dp"
            android:scaleType="centerCrop"
            android:src="@drawable/home_skyline" />

        <LinearLayout
            android:id="@id/linearLayoutSeparatorBar"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignBottom="@+id/imageViewHomeSkyline"
            android:layout_alignParentLeft="true"
            android:background="#F9A326"
            android:orientation="vertical" >
        </LinearLayout>

        <ImageButton
            android:id="@+id/imageButtonMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageViewHomeSkyline"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-75dp"
            android:background="#00FFFFFF"
            android:src="@drawable/utc_big_button" />
        
        <ImageView
            android:id="@+id/imageViewTipQuick"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignBottom="@id/linearLayoutSeparatorBar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="20dp"
            android:src="@drawable/splash_tip_quick"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imageViewTip"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:scaleType="fitXY"
            android:src="@drawable/splash_tip_wallet"
            android:visibility="gone" />

    </RelativeLayout>

</LinearLayout>
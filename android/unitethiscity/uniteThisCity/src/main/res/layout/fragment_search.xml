<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayoutSearch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/crumbSearch"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@drawable/crumb_bar_fixed"
        android:gravity="center"
        android:paddingBottom="2dp"
        android:text="@string/search"
        android:textAllCaps="true"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/crumbSearch">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageButton
                android:id="@+id/imageButtonBusiness"
                android:layout_width="125dp"
                android:layout_height="147dp"
                android:background="#00FFFFFF"
                android:src="@drawable/btn_search_business"
                android:scaleType="fitCenter"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp" />

            <ImageButton
                android:id="@+id/imageButtonEvent"
                android:layout_width="125dp"
                android:layout_height="147dp"
                android:background="#00FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_search_events"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp" />

            <ImageButton
                android:id="@+id/imageButtonSpecials"
                android:layout_width="125dp"
                android:layout_height="147dp"
                android:background="#00FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_search_specials"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp" />

            <ImageButton
                android:id="@+id/imageButtonEntertainers"
                android:layout_width="125dp"
                android:layout_height="147dp"
                android:background="#00FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_search_entertainers"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp" />
        </GridLayout>
    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayoutUTC"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/crumbRedeem"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/crumb_bar_fixed"
        android:gravity="center"
        android:paddingBottom="2dp"
        android:text="@string/redeem"
        android:textAllCaps="true"
        android:textStyle="bold" />

    <com.unitethiscity.ui.InteractiveScrollView
        android:id="@+id/scrollViewUTC"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/crumbRedeem"
        android:isScrollContainer="false" >

       <LinearLayout
            android:id="@+id/linearLayoutUTC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

        </LinearLayout>

    </com.unitethiscity.ui.InteractiveScrollView>

</RelativeLayout>
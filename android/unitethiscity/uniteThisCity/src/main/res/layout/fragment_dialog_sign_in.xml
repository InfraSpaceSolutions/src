<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayoutSignInDialogParent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#00FFFFFF" >

    <RelativeLayout
        android:id="@+id/relativeLayoutSignInDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:background="@drawable/rounded_dialog"
        android:padding="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">

        <LinearLayout
            android:id="@+id/linearLayoutSignInDialogTitle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#3B3B3B"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="10dp"
            android:layout_marginBottom="25dp"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/signInDialogTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/dialog_sign_in"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayoutSignInDialogEmail"
            android:layout_below="@+id/linearLayoutSignInDialogTitle"
            android:visibility="gone">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/editTextSignInDialogEmail"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/rounded_corners"
                android:hint="@string/dialog_sign_in_email_hint"
                android:gravity="center"
                android:textColor="#000000"
                android:textColorHint="#bdbdbd"
                android:textCursorDrawable="@null" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editTextSignInDialogPassword"
                android:layout_alignRight="@+id/editTextSignInDialogEmail"
                android:layout_alignEnd="@+id/editTextSignInDialogEmail"
                android:layout_alignLeft="@+id/editTextSignInDialogEmail"
                android:layout_alignStart="@+id/editTextSignInDialogEmail"
                android:layout_below="@+id/editTextSignInDialogEmail"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/rounded_corners"
                android:hint="@string/dialog_sign_in_password_hint"
                android:gravity="center"
                android:textColor="#000000"
                android:textColorHint="#bdbdbd"
                android:textCursorDrawable="@null" />

            <RelativeLayout
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayoutSignInDialogSpacer"
                android:layout_below="@+id/editTextSignInDialogPassword"
                android:layout_centerHorizontal="true"></RelativeLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/dialog_sign_in_cancel"
                android:id="@+id/btnSignInCancel"
                android:layout_toLeftOf="@+id/relativeLayoutSignInDialogSpacer"
                android:layout_below="@+id/editTextSignInDialogPassword"
                android:background="@drawable/btn_sign_up_email"
                android:textSize="14sp"
                android:textColor="#3B3B3B"
                android:textStyle="bold"
                android:layout_alignLeft="@+id/editTextSignInDialogPassword"
                android:layout_alignStart="@+id/editTextSignInDialogPassword"
                android:layout_marginLeft="10dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/dialog_sign_in_login"
                android:id="@+id/btnSignInLogin"
                android:layout_toRightOf="@+id/relativeLayoutSignInDialogSpacer"
                android:layout_below="@+id/editTextSignInDialogPassword"
                android:background="@drawable/btn_sign_up_email"
                android:textSize="14sp"
                android:textColor="#3B3B3B"
                android:textStyle="bold"
                android:layout_alignRight="@+id/editTextSignInDialogPassword"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="@string/dialog_sign_in_forgot_password"
                android:id="@+id/signInForgotPassword"
                android:layout_alignParentBottom="false"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/btnSignInLogin"
                android:gravity="center"
                android:textColor="#3B3B3B" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayoutSignInButtons"
            android:layout_below="@+id/linearLayoutSignInDialogTitle"
            android:visibility="visible">

            <Button
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:text="@string/dialog_sign_in_email"
                android:id="@+id/btnSignInEmail"
                android:background="@drawable/btn_sign_up_email"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginBottom="10dp"
                android:layout_alignLeft="@+id/btnSignInFacebook"
                android:layout_alignStart="@+id/btnSignInFacebook"
                android:layout_alignRight="@+id/btnSignInFacebook"
                android:layout_alignEnd="@+id/btnSignInFacebook" />

            <Button
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:text="@string/dialog_sign_in_facebook"
                android:id="@+id/btnSignInFacebook"
                android:layout_below="@+id/btnSignInEmail"
                android:layout_centerHorizontal="true"
                android:background="@drawable/btn_sign_up_facebook"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginBottom="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dialog_sign_in_not_member"
                android:id="@+id/signInDialogNotMember"
                android:layout_below="@+id/btnSignInFacebook"
                android:layout_centerHorizontal="true"
                android:textColor="#3B3B3B"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="@string/dialog_sign_in_tap_here"
                android:id="@+id/signInDialogTapHere"
                android:layout_below="@+id/signInDialogNotMember"
                android:layout_centerHorizontal="true"
                android:textColor="#3B3B3B"
                android:textSize="16sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/imageViewSignInDialogLogo"
            android:layout_below="@+id/relativeLayoutSignInButtons"
            android:layout_centerHorizontal="true"
            android:src="@drawable/header_logo"
            android:layout_marginBottom="15dp" />

    </RelativeLayout>

</RelativeLayout>
@{
    Layout = "~/Shared/_Layout.cshtml";

    // create an unmanaged page
    Page.SitePage = new SiteWebPage();
    Page.SitePage.ApplyName("Event");

    // make sure the user is logged in
    if ( !SiteAccount.IsLoggedIn() )
    {
        Response.Redirect(Href("~/AccountLogin"), false);
        return;
    }

    int evtID = WebConvert.ToInt32(UrlData[0], 0);

    WebDBContext db = new WebDBContext();

    SiteBusiness siteBusiness = new SiteBusiness();

    SiteBusinessInfo siteBusinessInfo = new SiteBusinessInfo(siteBusiness.BusID);

    // get the event types for the dropdown
    IEnumerable<TblEventTypes> rsEtt = db.TblEventTypes.OrderBy(target => target.EttID);

    if (IsPost)
    {
        SiteEvent siteEvent = new SiteEvent();
        siteEvent.BusID = siteBusiness.BusID;
        siteEvent.EttID = WebConvert.ToInt32(Request.Form["selEttID"], 0);
        siteEvent.EvtStartDate = WebConvert.ToDateTime(Request.Form["txtEvtStartDate"], DateTime.Today);
        siteEvent.EvtEndDate = WebConvert.ToDateTime(Request.Form["txtEvtEndDate"], siteEvent.EvtStartDate);
        siteEvent.EvtSummary = WebConvert.Truncate(WebConvert.ToString(Request.Form["txtEvtSummary"], ""), 140);
        siteEvent.EvtBody = WebConvert.ToString(Request.Form["txtEvtBody"], "");
        siteEvent.EvtLink = WebConvert.ToString(Request.Form["txtEvtLink"], "");
        siteEvent.SaveChanges();

        // sync to database
        db.SubmitChanges();

        // redirect to the dashboard
        Response.Redirect(Href("~/Business/Dashboard?msg=Modify"), false);
        return;
    }
}
@section head
{
	<script src="@Href( "~/Scripts/jquery.validate.min.js" )" type="text/javascript"></script>
	<script type="text/javascript">
	    $(document).ready(function () {
	        $("#frm").validate(
			{
			    messages:
				{
				    txtEvtSummary: { required: "required" },
				    txtEvtBody: { required: "required" },
				    txtEvtStartDate: { required: "required" },
				    selEttID: { required: "required" }
	            }
			});
	    });
	</script>
}
	<!-- PAGE -->
	<div id="page">
        <!-- BREAD CRUMBS -->
        <div class="breadcrumbs Roles">
            <div class="breadcrumbGray"><a href="@Href( "~/Account/" )">Account Dashboard</a></div>
			<div class="breadcrumbSpacerGrayGray">&nbsp;</div>
            <div class="breadcrumbGray"><a href="@Href( "~/Business/Dashboard" )">Business Dashboard</a></div>
			<div class="breadcrumbEndGray">&nbsp;</div>
        </div>
		<div id="fullSide">
			<h1>@HttpUtility.HtmlEncode(siteBusiness.BusName): @Html.Raw( Page.SitePage.Heading )</h1>
            @Html.Raw( Page.SitePage.Body )

            <!-- DASHBOARD -->
            <form name="frm" id="frm" method="post" class="basicForm">
                <fieldset style="width:770px;">
                    <div>
                        <label for="txtPinName">Event Summary: *</label><br />
                        <input type="text" name="txtEvtSummary" id="txtEvtSummary" class="required" size="80" maxlength="140" style="width:750px;" value="" />
                    </div>
                    <br style="clear:left;" />
                    <br />
                    <div>
                        <label for="txtEvtStartDate">Event Date : *</label><br />
                        <input type="text" name="txtEvtStartDate" id="txtEvtStartDate" class="required" size="10" maxlength="10" style="width:150px;" value="@DateTime.Today.ToShortDateString()" />
                        to 
                        <input type="text" name="txtEvtEndDate" id="txtEvtEndDate" size="10" maxlength="10" style="width:150px;" value="@DateTime.Today.ToShortDateString()" />
                    </div>
                    <div style="margin-left:20px;">
                        <label for="selEttID">Type: *</label><br />
                        <select name="selEttID" id="selEttID" class="required" style="width:150px;">
                            <option value="">Select...</option>
                            @foreach( TblEventTypes row in rsEtt )
                            {
                                <option value="@row.EttID">@(row.EttName)</option>
                            }
                        </select>
                    </div>
                    <br style="clear:left;" />
                    <br />

                    <div>
                        <label for="txtPinName">Event Body: *</label><br />
                        <textarea name="txtEvtBody" id="txtEvtBody" class="required" rows="10" cols="80" style="width:750px;"></textarea>
                    </div>
                    <br style="clear:left;" />
                    <br />
                    <div>
                        <label for="txtPinName">Event Link:</label><br />
                        <input type="text" name="txtEvtLink" id="txtEvtLink" size="80" maxlength="512" style="width:750px;" value="" />
                    </div>
                    <br style="clear:left;" />
                    <br />
                    <div style="float:none; margin-right:0px;">
                        <div class="orangeButtonRight">
                            <input type="submit" name="_btnSubmit" value="Create" class="button" />
                        </div>
                        <div class="orangeButtonRight">
                            <input type="button" name="_btnCancel" value="Cancel" class="button" onclick="javascript: window.location = '/Business/Dashboard';" />
                        </div>
                    </div>
                    <legend></legend>
                </fieldset>
            </form>
		</div>
		<br style="clear:left;" />
	</div>